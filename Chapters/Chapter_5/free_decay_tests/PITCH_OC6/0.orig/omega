FoamFile                                                                                 
{   
    version     2.0;
    format      ascii;
    class       volScalarField;                                                          
    location    "0";                                                                     
    object      omega;                                                                       
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //          

dimensions      [0 0 -1 0 0 0 0];                                                        

#include        "$FOAM_CASE/0/include/boundaryConditions"

internalField   uniform $turbulentOmega;                                                            

boundaryField                                                                            
{   
	"(inlet|outlet|walls)"
	{
		type	fixedValue;
		value	$internalField;
	}

    atmosphere
    {
    	type            inletOutlet;
    	inletValue      $internalField;
    	value           $internalField;
    }
        
 	floater
	{
		type	omegaWallFunction;
		value	uniform 1e3; //dummy
	}
}

